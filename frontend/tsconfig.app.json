{
  "compilerOptions": {
    "allowJs": true,         // ✅ Allow JS files like App.jsx
    "jsx": "react-jsx",      // ✅ For React 17+
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]         // ✅ Include your source folder
}
